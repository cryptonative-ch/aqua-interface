    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "mockdate": "^3.0.5",
    "redux-mock-store": "^1.5.4",
    "timezone-mock": "^1.1.4",
    "ts-node": "^9.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged && yarn test --coverage --ci"
    }
  },
  "lint-staged": {
    "src/**/*.{ts, tsx, css}": [
      "yarn lint --fix",
      "yarn format",
      "git add ."
    ]
  },
  "sideEffects": [
    "./src/i18n.ts"
  ]
