  "scripts": {
    "start": "react-scripts start",
    "start-mock": "env-cmd -f .env.mock react-scripts start",
    "start-xdai": "env-cmd -f .env.development.xdai react-scripts start",
    "build-xdai": "env-cmd -f .env.production.xdai react-scripts build",
    "build-mainnet": "env-cmd -f .env.production.ethereum react-scripts build",
    "subgraph-server": "ts-node --project src/subgraph/mock/tsconfig.commonjs.json src/subgraph/mock/server.ts",
    "test": "env-cmd -f .env.mock react-scripts test",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "lint": "eslint src/ --ext .js,.ts,.tsx",
    "eject": "react-scripts eject",
    "lint:fix": "eslint src/** --ext .js,.ts,.tsx --fix",
    "typechain": "typechain --target ethers-v5 --outDir src/contracts abis/*.json",
    "apollo-codegen": "apollo codegen:generate --localSchemaFile=graphql-schema.json --target=typescript --tagName=gql --globalTypesFile=src/subgraph/__generated__/globalTypes.ts"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "nohoist": [
    "**/babel-preset-react-app/@babel/runtime"
  ],
  "devDependencies": {
    "@types/cors": "^2.8.10",
